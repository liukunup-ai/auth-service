# 测试配置文件示例
# 复制此文件为 .env.test 并根据需要修改

# Redis 配置（用于 JWT 和验证码测试）
TEST_REDIS_ADDR=localhost:6379
TEST_REDIS_DB=15
TEST_REDIS_PASSWORD=

# MySQL 配置（如果需要集成测试）
TEST_MYSQL_DSN=root:password@tcp(localhost:3306)/auth_test?charset=utf8mb4&parseTime=true

# JWT 测试配置
TEST_ACCESS_SECRET=test-access-secret-key-for-testing-only
TEST_REFRESH_SECRET=test-refresh-secret-key-for-testing-only
TEST_ACCESS_EXPIRES_IN=3600
TEST_REFRESH_EXPIRES_IN=7200

# 其他测试配置
TEST_CAPTCHA_ENABLE=false
TEST_CAPTCHA_LENGTH=6
TEST_CAPTCHA_EXPIRES_IN=300
